<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <script type="text/javascript">
        var baseUrl = '@Request.ApplicationPath'
    </script>
    @Html.CombresLink("siteCss")
    @Html.CombresLink("siteJs")
    <script type="text/javascript">
        $(function () {
            $("#mainNav").buttonset();
            $("#menuPhotos").button({ icons: { secondary: 'ui-icon-triangle-1-s'} });
            $("#menuUsers").button({ icons: { secondary: 'ui-icon-triangle-1-s'} });
            $("#themeswitcher").themeswitcher();

            $('a[href^="http://"]').attr("target", "_blank");

            $("button, input:submit, .button").button();

            var color = $("#menu-photosText > span").css("color");
            console.log(color);
            $("a").css("color", color);
        });
    </script>
</head>
<body>
    <div id="container" class="ui-tabs ui-widget ui-widget-content ui-corner-all">
        <header id="mainHeader">
            <div id="upperHeader" class="ui-helper-clearfix">
                <h1 id="title">
                    My nice Title</h1>
                <div id="logindisplay">
                    <span id="themeswitcher"></span>
                    @Html.Partial("_LogOnPartial")
                </div>
            </div>
            <nav id="mainNav">
                <div class="menu-item">
                    <input type="radio" id="menuHome" name="menu" />
                    @Html.ActionLink(Resources.Navigation.Home, "Index", "Home")
                </div>
                <div class="menu-item">
                    <input type="radio" id="menuPhotos" name="menu" />
                    <label for="menuPhotos">
                        @Resources.Navigation.Photos
                    </label>
                    <div class="hover-menu photonavi">
                        <div class="menu-item">
                            <input type="radio" id="menuPhotosUpload" name="ForumsMenu" />
                            @Html.ActionLink(Resources.Photos.Upload, "Upload", "Photos")
                        </div>
                    </div>
                </div>
                <div class="menu-item">
                        <input type="radio" id="menuUsers" name="menu" />
                        <label for="menuUsers"> @Resources.Navigation.Users </label>
                    <div class="hover-menu">
                        <div class="menu-item">
                            <input type="radio" id="menuUsersOverview" name="menu" />
                            @Html.ActionLink(Resources.Navigation.Overview, "Index", "Users")
                        </div>
                        <div class="menu-item">
                            <input type="radio" id="menuUsersMyProfile" name="menu" />
                            @Html.ActionLink(Resources.Users.MyProfile, "MyProfile", "Users")
                        </div>
                    </div>
                </div>
                <div class="menu-item">
                    <input type="radio" id="menuForums" name="menu" />
                    @Html.ActionLink(Resources.Navigation.Forums, "Index", "Forums")
                </div>
                <div class="menu-item">
                    <input type="radio" id="menuMovies" name="menu" />
                    @Html.ActionLink(Resources.Navigation.Movies, "Index", "Movies")
                </div>
            </nav>
        </header>
        <div id="content">
            @RenderBody()
        </div>
        <footer id="footer">
        </footer>
    </div>
</body>
</html>
